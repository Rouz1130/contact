{{#if addNewContact}}
  <h3>New Contact</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="age">Age:</label>
        {{input value=age id="age"}}
      </div>

      <div class="form-group">
        <label for="occupation">Occupation</label>
        {{input value=occupation id="occupation"}}
      </div>

      <div class="form-group">
        <label for="resides">Country of residence</label>
        {{input value=resides id="resides"}}
      </div>

      <div class="form-group">
        <label for="email">Email address:</label>
        {{input value=email id="email"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveContact1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'contactFormShow'}}>Add Contact</button>
{{/if}}
